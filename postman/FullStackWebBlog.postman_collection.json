{
  "info": {
    "_postman_id": "c49c58b2-6fb0-4e2c-bb6b-6e12b5e2f001",
    "name": "FullStackWebBlog API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "signup"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Signup success', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});",
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data && data.token) {",
                  "    pm.environment.set('token', data.token);",
                  "  }",
                  "} catch (e) {}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Login success', function () {",
                  "  pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data && data.token) {",
                  "    pm.environment.set('token', data.token);",
                  "  }",
                  "} catch (e) {}"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "logout"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Get all posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/posts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "posts"
              ]
            }
          }
        },
        {
          "name": "Get single post",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "posts",
                "{{postId}}"
              ]
            }
          }
        },
        {
          "name": "Create post (multipart, optional image)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/posts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "posts"
              ]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "My First Post",
                  "type": "text"
                },
                {
                  "key": "subtitle",
                  "value": "A quick subtitle",
                  "type": "text"
                },
                {
                  "key": "content",
                  "value": "Hello from Postman!\n\nThis is the full article content.",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": ""
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Create post success', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});",
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data && data._id) {",
                  "    pm.environment.set('postId', data._id);",
                  "  }",
                  "} catch (e) {}"
                ]
              }
            }
          ]
        },
        {
          "name": "Update post (multipart, optional image)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "posts",
                "{{postId}}"
              ]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Updated title",
                  "type": "text"
                },
                {
                  "key": "subtitle",
                  "value": "Updated subtitle",
                  "type": "text"
                },
                {
                  "key": "content",
                  "value": "Updated content from Postman",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": ""
                }
              ]
            }
          }
        },
        {
          "name": "Delete post",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "posts",
                "{{postId}}"
              ]
            }
          }
        }
      ]
    }
  ]
}
